# Dockerfile.dev
FROM node:20-slim

WORKDIR /app

# Install dependencies (use Docker layer caching)
COPY package*.json ./
RUN npm install

# Copy entire project
COPY . .

# Expose Vite port (SvelteKit dev)
EXPOSE 5173

# Start dev server with HMR
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
